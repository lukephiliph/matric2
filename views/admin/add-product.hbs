<section>
    <div class="container">
        <div class="col-md-6">
            <h2 class="text-center">Add product</h2>
            <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                   <label for="">Name</label>
                   <input type="text" name="Name" class="form-control"> 
                    <br>
                   <select name="Category" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            {{#each category}}
                            <option >{{this.category}}</option>
                            {{/each}}
                            </select>

                            <select name="Subcategory" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            {{#each category}}
                            <option>{{this.subcategory}}</option>
                            {{/each}}
                            </select>
                       
                    <br>
                   <label for="">Price</label>
                   <input type="text" name="Price" class="form-control"> 

                   <label for="">Description</label>
                   <input type="text" name="Description" class="form-control"> 

                    <label for="">Image</label>
                   <input type="file" name="Image" class="form-control"> 



                    <label for="">Image</label>
                   <input type="file" name="Image2" class="form-control">


                   <label for="">Stock</label>
                   <input type="text" name="Stock" class="form-control">

                   <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</section>


