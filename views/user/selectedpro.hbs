
<!-- Product section-->

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-2 ml-5">
                           
                                <img class="image" id="zoom" src="/product-images/{{products._id}}.jpg" style="width: 15rem; height: 16rem"/>
                            
                            <div class="thumbnail text-center" style="height: 5rem; margin-top: 1rem">
                                <img onclick="change_image(this)" src="/product-images/{{products._id}}.jpg" data-zoom-image=" " % width="70" style="height: 5rem; margin-left: -9rem"/>
                                <img onclick="change_image(this)" src="/product-images/{{products._id}}.jpg" data-zoom-image="" width="70" style="height: 5rem; margin-left: 1rem"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-long-arrow-left"></i>
                                    <span class="ml-1" style="margin-left :10px;"></span>
                                </div>
                                <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3">
                                <span class="text-uppercase text-muted brand"></span>
                                <h5 class="text-uppercase">{{products.Name}}</h5>

                                <div class="d-flex" style="height: 5rem">
                                    <p class="small" style="font-size: 22px">
                                       {{products.Category}}
                                    </p>
                                    <p class="small text-danger" style="margin-top: 3rem; margin-left: -3.3rem">
                                        <s>â‚¹{{products.Price}}
                                        </s>
                                    </p>
                                </div>
                                <div class="price d-flex flex-row align-items-center">
                                    <span class="act-price">&#8377;
                                        {{products.Price}}</span>
                                    <div class="ml-2"></div>
                                </div>
                            </div>
                            <p class="about" >
                               {{products.Description}}
                            </p>

                            
                                <div class="cart mt-4 align-items-center">
                                    <a href="/add-to-cart/{{products._id}}"><button class="btn btn-danger text-uppercase mr-2 px-4" type="submit">
                                        Add to cart
                                    </button></a>
                                    <a href="/add-to-wishlist/{{products._id}}"><button class="btn btn-danger text-uppercase mr-2 px-4" type="submit">
                                        Add to wishlist
                                    </button></a>
                                    <i class="fa fa-heart text-muted"></i>
                                    <i class="fa fa-share-alt text-muted"></i>
                                </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function change_image(image) {
        var container = document.getElementById("zoom");

        container.src = image.src;
    }

    document.addEventListener("DOMContentLoaded", function (event) {});
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>
<script>
    $("#zoom").elevateZoom();
</script>
<script>
    $("#zoom1").elevateZoom();
</script>
<script>
    $("#zoom2").elevateZoom();
</script>